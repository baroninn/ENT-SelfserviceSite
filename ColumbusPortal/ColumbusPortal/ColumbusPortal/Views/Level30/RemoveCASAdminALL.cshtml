@model ColumbusPortal.Models.Level30Model
@{
    ViewBag.Title = "Level30 > RemoveCASAdminALL";
}
@section script {
    <script>
        $(document).ready(function () {

            GetCASAdminUsersALLLIST();
            $("#username").html("Contacting DB... please be patient..");

        });

    </script>

}

<h1 class="title">@ViewBag.Title</h1>
<p>Use this form to remove a Columbus Admin account from ALL customers.</p>
<br />

@using (Html.BeginForm("RemoveCASAdminALL", "Level30"))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Remove ALL CAS Admin</legend>
        <table>
            <tr>
                <td colspan="2">
                    <div id="messageDiv">
                        @if (Model.Message != null)
                        {
                            <div class="message">@Model.Message <p><small><a href="javascript:ClearErrors()">Clear errors</a></small></p></div>
                        }
                    </div>
                    <div id="okMessageDiv">
                        @if (Model.OKMessage.Count > 0)
                        {
                            <div class="okmessage">
                                @foreach (string msg in Model.OKMessage)
                                {
                                    <p>@msg</p>
                                }
                                <p><small><a href="javascript:ClearMessages()">Clear messages</a></small></p>
                            </div>
                        }
                    </div>
                </td>
            </tr>
        </table>
        <table>
            <tr>
                <td class="lefttd">Admin User</td>
                <td class="middletd">
                    <select id="username" name="username"><option>Contacting DB... please be patient..</option></select>
                    <span class="mandatory">*</span>
                </td>
            </tr>

        </table>
        <br />
        <input type="submit" class="button" id="buttonSubmit" value="Remove From All Customers" onclick="buttonSubmit.disabled = true; ClearMessages(); ClearErrors(); StartSubmitButtonMessage(); this.form.submit()" />
        <br />
    </fieldset>

}