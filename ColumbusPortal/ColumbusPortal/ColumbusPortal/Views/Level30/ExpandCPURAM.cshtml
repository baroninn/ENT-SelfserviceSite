@model ColumbusPortal.Models.Level30Model
@{
    ViewBag.Title = "Level30 > ExpandCPURAM";
}
@section script {

<script>
        $(document).ready(function () {

            GetVMServers();

            var job = 'expandcpuram'
            GetScheduledJobs(job);
            $("#scheduledjobs").html("Loading...");

            $("select[name=vmid]").html('<option>loading, this could take some time, (VMM is sooo slow)......</option>').change(function () {
                $("#vminfo").html("Loading...");
                GetVMInfo();
            });
            $("#vminfo").html("Loading...");
            GetVMInfo();

            var d = new Date(),
                // ' 01:00' there has to be a space for the jquery to understand...
            date = (d.getUTCFullYear()) + '-' + (d.getUTCMonth() + 1) + '-' + (d.getUTCDate() + 1) + ' 01:00';

            jQuery.datetimepicker.setLocale('da');
            jQuery('#datetime').datetimepicker({

                theme: 'default',
                dayOfWeekStart: 1,
                format: 'Y-m-d H:i',
                inline: false,
                weeks: true,
                value: date

            });
        });

        $('#cpu').on('paste input', function () {
            var number = $(this).val()
            if (isNaN(number)) {
                $.alert({
                    theme: 'light',
                    type: 'red',
                    typeAnimated: true,
                    title: 'WARNING:',
                    content: 'Enter only numbers!',
                });
                $(this).val('');
            }

            if (number > 4) {
                $.alert({
                    theme: 'light',
                    type: 'red',
                    typeAnimated: true,
                    title: 'WARNING:',
                    content: 'For expansions over 4 cores, please be 100% sure!..',
                });
                $(this).val(number);
            }
        });

        $('#ram').on('paste input', function () {
            var number = $(this).val()
            if (isNaN(number)) {
                $.alert({
                    theme: 'light',
                    type: 'red',
                    typeAnimated: true,
                    title: 'WARNING:',
                    content: 'Enter only numbers!',
                });
                $(this).val('');
            }

            if (number > 24) {
                $.alert({
                    theme: 'light',
                    type: 'red',
                    typeAnimated: true,
                    title: 'WARNING:',
                    content: 'For expansions over 24 GB of RAM, please be 100% sure..',
                });
                $(this).val(number);
            }
        });
</script>
}

<h1 class="title">@ViewBag.Title</h1>
<p>Use this form to expand a VM CPU/RAM..</p>
<br />

@using (Html.BeginForm("ExpandCPURAM", "Level30"))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Expand CPU/RAM</legend>
        <table>
            <tr>
                <td colspan="2">
                    <div id="messageDiv">
                        @if (Model.Message != null)
                        {
                            <div class="message">@Model.Message <p><small><a href="javascript:ClearErrors()">Clear errors</a></small></p></div>
                        }
                    </div>
                    <div id="okMessageDiv">
                        @if (Model.OKMessage.Count > 0)
                        {
                            <div class="okmessage">
                                @foreach (string msg in Model.OKMessage)
                                {
                                    <p>@msg</p>
                                }
                                <p><small><a href="javascript:ClearMessages()">Clear messages</a></small></p>
                            </div>
                        }
                    </div>
                </td>
            </tr>
        </table>
        <table>
            <tr>
                <td class="lefttd"><span>VM Servers</span></td>
                <td class="middletd">
                    <select name="vmid"><option>loading...</option></select>
                    <span class="mandatory">*</span>
                </td>
            </tr>
        </table>

        <br />
        <fieldset class="subfieldset">
            <legend class="sublegend">Current VM configuration</legend>
            <table>
                <tr>
                    <td class="middletd">
                        <div class="middletd" id="vminfo">Waiting</div>
                    </td>
                </tr>
            </table>
        </fieldset>
        <br />
        <fieldset class="subfieldset">
            <table>
                <tr>
                    <td class="longtd">
                        <span class="warning2">If ex. CPU count should stay the same, enter the current core number instead of nothing. Every field must be filled out.</span>
                    </td>
                </tr>
            </table>
            <br />
            <table>
                <tr>
                    <td class="lefttd"><span>Opgave nr<i class="material-icons infoicon"></i></span></td>
                    <td class="middletd">
                        <input id="taskid" name="taskid" placeholder="109000" type="text"
                               @if (Model.ActionFailed) {  @: value="@Model.ExpandCPURAM.TaskID"
                                                          } />
                        <span class="mandatory">*</span>
                        <div class="description">
                            <p class="descriptiontext">
                                Enter TaskID (Opgave nr.) from Navision..
                            </p>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="lefttd"><span>Date & Time<i class="material-icons infoicon"></i></span></td>
                    <td class="middletd">
                        <input id="datetime" name="datetime" placeholder="YYYY-MM-DD 00:00" type="text"
                               @if (Model.ActionFailed) {  @: value="@Model.ExpandCPURAM.DateTime"
                                                          } />
                        <span class="mandatory">*</span>
                    </td>
                </tr>

                <tr>
                    <td class="lefttd tooltip"><span>Expand CPU to<i class="material-icons infoicon">info</i></span></td>
                    <td class="middletd">
                        <input name="cpu" placeholder="4" type="number" min="1" max="4" id="cpu" class="cpuwarning" required
                               @if (Model.ActionFailed) {  @: value="@Model.ExpandCPURAM.CPU"
                                                                                                                                                      } />
                        <span class="mandatory">*</span>

                        <div class="description">
                            <p class="descriptiontext">
                                Enter the CPU cores you want to assign.
                            </p>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="lefttd tooltip"><span>Expand RAM to<i class="material-icons infoicon">info</i></span></td>
                    <td class="middletd">
                        <input name="ram" placeholder="4" type="number" min="2" max="24" id="ram" class="ramwarning" required
                               @if (Model.ActionFailed) {  @: value="@Model.ExpandCPURAM.RAM"
                                                                                                                                                      } />
                        <span class="mandatory">*</span>
                        <div class="description">
                            <p class="descriptiontext">
                                Enter the RAM in whole GB's you want to assign ex 8.
                            </p>
                        </div>
                    </td>
                </tr>

                <tr>
                    <td class="lefttd tooltip"><span>Email to Notify<i class="material-icons infoicon">info</i></span></td>
                    <td>
                        <input name="email" placeholder="xxx@columbusglobal.com"
                               @if (Model.ActionFailed) {  @: value="@Model.ExpandCPURAM.Email"
                                                          } />
                        <span class="mandatory">*</span>
                        <div class="description">
                            <p class="descriptiontext">
                                Enter the email which will be notified when task is complete.
                            </p>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="lefttd tooltip"><span>DynamicMemory<i class="material-icons infoicon">info</i></span></td>
                    <td>
                        <select name="dynamicmb" id="dynamicmb">
                            <option selected="@(Model.ActionFailed && Model.ExpandCPURAM.DynamicMemoryEnabled == "")"></option>
                            <option selected="@(Model.ActionFailed && Model.ExpandCPURAM.DynamicMemoryEnabled == "False")">False</option>
                            <option selected="@(Model.ActionFailed && Model.ExpandCPURAM.DynamicMemoryEnabled == "True")">True</option>
                        </select>
                        <div class="description">
                            <p class="descriptiontext">
                                If empty the current DynamicMemory setting will be kept.
                            </p>
                        </div>
                    </td>
                </tr>
            </table>
            <br />
            <input type="submit" class="button" id="buttonSubmit" value="Expand CPU/RAM" onclick="buttonSubmit.disabled = true; ClearMessages(); ClearErrors(); StartSubmitButtonMessage(); this.form.submit()" />
        </fieldset>
        <fieldset class="subfieldset">
            <legend class="sublegend">Current Schedules</legend>
            <table>
                <tr>
                    <td>
                        <div id="scheduledjobs">Waiting</div>
                    </td>
                </tr>
            </table>
        </fieldset>

    </fieldset>
}
