@model SystemHostingPortal.Models.MailModel
@{
    ViewBag.Title = "Mail > Remove Alias";
}
@section script { 
    <script>
        $(document).ready(function () {
            $("select[name=organization]").change(function () {
                GetMailbox();

                $("#existingAliases").html("");
            });
            $("select[name=userprincipalname]").change(function () {
                GetAliases();
            });
            
            @if (Model.Alias != null)
            {
            <text>$("select[name=organization]").val("@Model.Alias.Organization");</text>
            }
            
            GetMailbox();

        });
    </script>
}

<h1 class="title">@ViewBag.Title</h1>
<p>Use this form remove email aliases from a user account.</p>

@using(Html.BeginForm("RemoveAlias", "Mail")) {
<fieldset>
    <legend>Add alias</legend>
    <table>
        <tr>
            <td colspan="2">
                <div id="messageDiv">
                    @if (Model.Message != null)
                    {
                        <div class="message">@Model.Message <p><small><a href="javascript:ClearErrors()">Clear errors</a></small></p></div>
                    }
                </div>
                <div id="okMessageDiv">
                    @if (Model.OKMessage.Count > 0)
                    {
                        <div class="okmessage">
                            @foreach (string msg in Model.OKMessage)
                            {
                                <p>@msg</p>
                            }
                            <p><small><a href="javascript:ClearMessages()">Clear messages</a></small></p>
                        </div>
                    }
                </div>
            </td>
        </tr>
        <tr>
            <td class="lefttd">Organization</td>
            <td><select name="organization">
                @foreach(string organization in Model.Organizations) 
                {
                    <option @if(Model.ActionFailed)
                            {
                                if(organization == Model.Alias.Organization) {
                                    @:selected="selected"
                                }
                            }>@organization</option>
                }
                </select></td>
        </tr>
        <tr>
            <td class="lefttd">Existing aliases:</td>
            <td class="righttd">
                <div id="existingAliasesDiv">
                    <ul id="existingAliases"></ul>
                </div>
            </td>
        </tr>
        <tr>
            <td class="lefttd">Mailbox</td>
            <td>
                <select name="userprincipalname"><option>loading...</option></select>
            </td>
        </tr>
        <tr>
            <td class="lefttd">Remove email aliases</td>
            <td><textarea name="emailaddresses" rows="10" placeholder="One alias per line">@if (Model.ActionFailed)
                                                                                                 {
                                                                                                     string.Join("\r\n", Model.Alias.EmailAddresses);
                                                                                                 }</textarea></td>
        </tr>
    </table>
    
    <input type="submit" value="Remove Alias" id="buttonSubmit" onclick="buttonSubmit.disabled = true; ClearMessages(); ClearErrors(); StartSubmitButtonMessage(); this.form.submit()" />
</fieldset>
}