@model SystemHostingPortal.Models.Level30Model
@{
    ViewBag.Title = "Level30 > ExpandVHD";
}
@section script {
<script type="text/javascript" src="/bower_components/jquery/jquery.min.js"></script>
<script type="text/javascript" src="/bower_components/moment/min/moment.min.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker.js"></script>
<link rel="stylesheet" href="~/Content/bootstrap-datetimepicker.css" />
<link rel="stylesheet" href="~/Content/bootstrap-datetimepicker.min.css" />


    <script>
        $(document).ready(function () {

            GetVMServers();
        $("select[name=id]").html('<option>loading, this could take some time......</option>').change(function () {
            GetVMVHDs();
            $("select[name=vhdid]").html('<option>loading, this could take some time......</option>');
            });
        });
        $(function () {
            // This will make every element with the class "date-picker" into a DatePicker element
            $('.date-picker').datepicker();
        })
    </script>
}

<h1 class="title">@ViewBag.Title</h1>
<p>Use this form to expand a VM disk..</p>

@using (Html.BeginForm("ExpandVHD", "Level30"))
{
    <fieldset>
        <legend>Expand VHD</legend>
        <table>
            <tr>
                <td colspan="2">@if (Model.Message != null)
                { <div class="message">@Model.Message</div> }</td>
            </tr>

            <tr>
                <td class="lefttd"><span>VMServers<i class="material-icons infoicon"></i></span></td>
                <td class="righttd">
                    <select name="id"><option>loading...</option></select>
                </td>
            </tr>
            <tr>
                <td class="lefttd"><span>VHDs<i class="material-icons infoicon"></i></span></td>
                <td class="righttd">
                    <select name="vhdid"><option>loading...</option></select>
                </td>
            </tr>
            <tr>
                <td class="lefttd"><span>$(selector).datepick({dateFormat: 'yyyy-mm-dd'});</span></td>
                <td class="righttd">
                    <div id="datepicker"></div>
                </td>
            </tr>

        </table>
        <input class="date-picker" />
        @Html.TextBox("YourTextBox", "", new { @class = "date-picker" })
        <br />
        <input type="submit" class="button" class:hover="button:hover" id="buttonSubmit" value="Expand" onclick="buttonSubmit.disabled = true; ClearMessages(); ClearErrors(); StartSubmitButtonMessage(); this.form.submit()" />
    </fieldset>

}