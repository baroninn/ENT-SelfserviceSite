@model SystemHostingPortal.Models.MailModel
@{
    ViewBag.Title = "Mail > Add Domain";
}
@section script {
    <script>
        window.onload = function () {
            document.forms[0].AddasEmail.checked = true;
            // you can change the 0 to a string of the form's name
        };
        $(document).ready(function () {
            GetDomain();
            $("select[name=organization]").change(function () {
                $("#Domain").html("Loading, this could take some time...");
                GetDomain();
            });
        });

        function Info() {
            if ($("input[name=addoffice365]").prop('checked')) {
                $.confirm({
                    theme: 'light',
                    type: 'green',
                    typeAnimated: true,
                    title: 'INFO:',
                    content: 'If the customer has Office 365' +
                             '<p>Remember to verify the domain with a TXT record...' + 
                             '<p>You will recieve the TXT record when done, and it will be written to the Log...',
                    buttons: {
                        OK: function () {
                            $("input[name=addoffice365]").prop("checked", true);
                        },
                    }
                });
            }
        }
    </script>
}

<h1 class="title">@ViewBag.Title</h1>
<p>Use this form to add a domain for a customer.</p>
<br />

@using (Html.BeginForm("AddDomain", "Mail"))
{
    <fieldset>
        <legend>Add Domain</legend>
        <table>
            <tr>
                <td colspan="2">
                    <div id="messageDiv">
                        @if (Model.Message != null)
                        {
                            <div class="message">@Model.Message <p><small><a href="javascript:ClearErrors()">Clear errors</a></small></p></div>
                        }
                    </div>
                    <div id="okMessageDiv">
                        @if (Model.OKMessage.Count > 0)
                        {
                            <div class="okmessage">
                                @foreach (string msg in Model.OKMessage)
                                {
                                    <p>@msg</p>
                                }
                                <p><small><a href="javascript:ClearMessages()">Clear messages</a></small></p>
                            </div>
                        }
                    </div>
                </td>
            </tr>

            <tr>
                <td class="lefttd">Organization</td>
                <td class="middletd">
                    <select name="organization">
                        @foreach (string organization in Model.Organizations)
                        {
                            <option @if (Model.ActionFailed) { if (organization == Model.Domain.Organization) { @: selected="selected"
                                                                    } }>
                                @organization
                                                                </option>
                        }
                    </select>
                    <span class="mandatory">*</span>
                </td>
            </tr>
            <tr>
                <td class="lefttd">Domains:</td>
                <td class="middletd">
                    <div id="Domain"></div>
                </td>
            </tr>
            <tr>
                <td class="lefttd tooltip"><span>Current Domains<i class="material-icons infoicon">info</i></span></td>
                <td class="middletd">
                    <input name="domain" placeholder="testdomæne.dk" @if (Model.ActionFailed) { @: value="@Model.Domain.Domain"
                                                                                                                                                               } />
                    <span class="mandatory">*</span>
                    <div class="description">
                        <p class="descriptiontext">
                            This will add a domain to the customer, and a UPN on the local on-prem AD.
                        </p>
                    </div>
                </td>
            </tr>
            <tr>
                <td class="lefttd">Add as Accepted EmailDomain</td>
                <td>
                    <input name="AddasEmail" type="checkbox" @if (Model.ActionFailed) { if (Model.Domain.AddasEmail) { @: checked="checked" 
                           } } onclick="Info()" />

                    <div class="description">
                        <p class="descriptiontext">
                            This will add the domain as an accepted domain in Exchange..
                        </p>
                    </div>
                </td>
            </tr>

        </table>
        <br />
        <input type="submit" class="button" class:hover="button:hover" value="Add Domain" id="buttonSubmit" onclick="buttonSubmit.disabled = true; ClearMessages(); ClearErrors(); StartSubmitButtonMessage(); this.form.submit();" />
    </fieldset>
}