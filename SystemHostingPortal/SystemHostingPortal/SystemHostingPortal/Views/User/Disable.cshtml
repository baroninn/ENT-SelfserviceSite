@model SystemHostingPortal.Models.UserModel
@{
    ViewBag.Title = "User > Disable";
}
@section script {
    <script>
        $(document).ready(function () {
            if (navigator.userAgent.match(/msie/gi)) { alert('This page is not supported in MSIE'); }

            GetADUsersList();

            $("select[name=organization]").change(function () {
                $("select[name=distinguishedname]").html('<option>loading...</option>');

                GetADUsersList();

            });
        });

        function Confirm() {
            if ($("input[name=confirm]").prop('checked')) {
                var result = confirm("WARNING: THIS WILL DISABLE THE USER!")
                if (!result) {
                    $("input[name=confirm]").prop("checked", false);
                }
            }
        }
    </script>
}

<h1 class="title">@ViewBag.Title</h1>
<p>Use this form to disable and/or hide a user account</p>

@using(Html.BeginForm("Disable", "User")) {
<fieldset>
    <legend>Disable user</legend>
    <table>
        <tr>
            <td colspan="2">
                <div id="messageDiv">
                    @if (Model.Message != null)
                    {
                        <div class="message">@Model.Message <p><small><a href="javascript:ClearErrors()">Clear errors</a></small></p></div>
                    }
                </div>
                <div id="okMessageDiv">
                    @if (Model.OKMessage.Count > 0)
                    {
                        <div class="okmessage">
                            @foreach (string msg in Model.OKMessage)
                            {
                                <p>@msg</p>
                            }
                            <p><small><a href="javascript:ClearMessages()">Clear messages</a></small></p>
                        </div>
                    }
                </div>
            </td>
        </tr>

        <tr>
            <td class="lefttd">Organization</td>
            <td><select name="organization">
                    @foreach(string organization in Model.Organizations) 
                    {
                            <option @if(Model.ActionFailed)
                                    {
                                        if(organization == Model.DisableUser.Organization) {
                                            @:selected="selected"
                                        }
                                    }>@organization</option>
                    }
                </select></td>
        </tr>
        <tr>
            <td class="lefttd">AD User</td>
            <td>
                <select name="distinguishedname"><option>loading...</option></select>
            </td>
        </tr>
        <tr>
            <td class="lefttd">Confirm</td>
            <td><input name="confirm" type="checkbox" @if (Model.ActionFailed)
                                                           {
                                                               if (Model.DisableUser.Confirm)
                                                               { 
                                                                    @:checked="checked"
                                                                }
                                                            }/></td>
        </tr>
    </table>
    <br />
    <input type="submit" class="button" class:hover="button:hover" value="Disable" id="buttonSubmit" onclick="buttonSubmit.disabled = true; StartSubmitButtonMessage(); this.form.submit()" />
</fieldset>
}