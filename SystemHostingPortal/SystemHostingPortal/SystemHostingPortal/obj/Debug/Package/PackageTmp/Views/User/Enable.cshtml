@model SystemHostingPortal.Models.UserModel
@{
    ViewBag.Title = "User > Enable";
}
@section script {
    <script>
        $(document).ready(function () {
            if (navigator.userAgent.match(/msie/gi)) { alert('This page is not supported in MSIE'); }

            GetADUsersList();

            $("select[name=organization]").change(function () {
                $("select[name=distinguishedname]").html('<option>loading...</option>');

                GetADUsersList();

            });
        });

        function Confirm() {
            if ($("input[name=confirm]").prop('checked')) {
                var result = confirm("WARNING: THIS WILL ENABLE THE USER!\n\nRemember, you can easily disable the user again.")
                if (!result) {
                    $("input[name=confirm]").prop("checked", false);
                }
            }
        }
    </script>
}

@using(Html.BeginForm("Enable", "User")) {
    <fieldset>
        <legend>@ViewBag.Title</legend>
        <p>Use this form to enable AD users and unhide users on the exchange address lists</p>

        <table>
            <tr>
                <td colspan="2">
                    <div id="messageDiv">
                        @if (Model.Message != null)
                        {
                            <div class="message">@Model.Message <p><small><a href="javascript:ClearErrors()">Clear errors</a></small></p></div>
                        }
                    </div>
                    <div id="okMessageDiv">
                        @if (Model.OKMessage.Count > 0)
                        { 
                            <div class="okmessage">
                                @foreach (string msg in Model.OKMessage)
                                {
                                    <p>@msg</p>
                                }
                                <p><small><a href="javascript:ClearMessages()">Clear messages</a></small></p>
                            </div>
                        }
                    </div>
                </td>
            </tr>
            <tr>
                <td class="lefttd">Organization</td>
                <td>
                    <select name="organization">
                        @foreach (string organization in Model.Organizations)
                        {
                            <option selected="@(Model.EnableUser.Organization != null && Model.EnableUser.Organization == organization)">@organization</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td class="lefttd">AD User</td>
                <td>
                    <select name="distinguishedname"><option>loading...</option></select>
                </td>
            </tr>
            <tr>
                <td class="lefttd">Confirm<br /></td>
                <td>
                    <input name="confirm" type="checkbox" @if (Model.ActionFailed) { if (Model.DisableUser.Confirm) { @: checked="checked"
                                                                                                                                             } } onclick="Confirm()" />
                </td>
            </tr>
        </table>
        <br />
        <input type="submit" class="button" class:hover="button:hover" id="buttonSubmit" value="Enable user" onclick="buttonSubmit.disabled = true; ClearMessages(); ClearErrors(); StartSubmitButtonMessage(); this.form.submit()" />
    </fieldset>
}
    