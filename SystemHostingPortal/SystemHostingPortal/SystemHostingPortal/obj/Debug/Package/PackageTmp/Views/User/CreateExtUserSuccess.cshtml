@model SystemHostingPortal.Models.UserModel
@{
    ViewBag.Title = "User > Create > Success";
}

<h1 class="title">@ViewBag.Title</h1>
<p>A new Ext. user has been created</p>

<fieldset>
    <legend>Result</legend>
    <table>
        <tr>
            <td colspan="2">@if (Model.Message != null)
            { <div class="message">@Model.Message</div> }</td>
        </tr>
        <tr>
            <td class="lefttd">Organization:</td>
            <td class="righttd">@Model.CreateExtUser.Organization</td>
        </tr>
        <tr>
            <td class="lefttd">DisplayName:</td>
            <td class="righttd">@Model.CreateExtUser.DisplayName</td>
        </tr>
        <tr>
            <td class="lefttd">Password:</td>
            <td class="righttd">@Model.CreateExtUser.Password</td>
        </tr>
        <tr>
            <td class="lefttd">Primary email:</td>
            <td class="righttd">@Model.CreateExtUser.UserName@@@Model.CreateExtUser.DomainName</td>
        </tr>
        <tr>
            <td class="lefttd">Description:</td>
            <td class="righttd">@Model.CreateExtUser.Description</td>
        </tr>
        <tr>
            <td class="lefttd">Expiration Date:</td>
            <td class="righttd">@Model.CreateExtUser.ExpirationDate</td>
        </tr>
    </table>
</fieldset>