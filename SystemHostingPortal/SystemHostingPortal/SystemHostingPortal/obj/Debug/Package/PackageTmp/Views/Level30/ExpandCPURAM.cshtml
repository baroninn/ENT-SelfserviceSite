@model SystemHostingPortal.Models.Level30Model
@{
    ViewBag.Title = "Level30 > ExpandCPURAM";
}
@section script {

    <script>
        $(document).ready(function () {

            GetVMServers();
            $("select[name=id]").html('<option>loading, this could take some time, (VMM is sooo slow)......</option>').change(function () {
                $("#vminfo").html("Waiting...");
                GetVMInfo();
            });
            $("#vminfo").html("Waiting...");
            GetVMInfo();

            jQuery.datetimepicker.setLocale('da');
            jQuery('#datetime').datetimepicker({
                theme: 'default',
                dayOfWeekStart: 1,
                format: 'Y-m-d H:i',
                inline: false,
                weeks:true

            });

        });


    </script>
}

<h1 class="title">@ViewBag.Title</h1>
<p>Use this form to expand a VM CPU/RAM..</p>

@using (Html.BeginForm("ExpandCPURAM", "Level30"))
{
    <fieldset>
        <legend>Expand CPU/RAM</legend>
        <table>
            <tr>
                <td colspan="2">
                    <div id="messageDiv">
                        @if (Model.Message != null)
                        {
                            <div class="message">@Model.Message <p><small><a href="javascript:ClearErrors()">Clear errors</a></small></p></div>
                        }
                    </div>
                    <div id="okMessageDiv">
                        @if (Model.OKMessage.Count > 0)
                        {
                            <div class="okmessage">
                                @foreach (string msg in Model.OKMessage)
                                {
                                    <p>@msg</p>
                                }
                                <p><small><a href="javascript:ClearMessages()">Clear messages</a></small></p>
                            </div>
                        }
                    </div>
                </td>
            </tr>
        </table>
        <table>
            <tr>
                <td class="lefttd"><span>VMServers<i class="material-icons infoicon"></i></span></td>
                <td class="righttd">
                    <select name="id"><option>loading...</option></select>
                </td>
            </tr>
        </table>
    </fieldset>
    <fieldset>
        <table>
            <tr>
                <td class="righttd">
                    <div class="righttd" id="vminfo"></div>
                </td>
            </tr>
        </table>
    </fieldset>
    <fieldset>
        <table>
            <tr>
                <td class="lefttd"><span>Date & Time<i class="material-icons infoicon"></i></span></td>
                <td class="righttd">
                    <input id="datetime" name="datetime" placeholder="YYYY-MM-DD 00:00" type="text" @if (Model.ActionFailed) {  @: value="@Model.ExpandCPURAM.DateTime"
                                                                                                                                                                                                                            } />
                </td>
                <td class="mandatory">*</td>
            </tr>

            <tr>
                <td class="lefttd tooltip"><span>Expand CPU to<i class="material-icons infoicon">info</i></span></td>
                <td>
                    <input name="cpu" placeholder="4" @if (Model.ActionFailed) {  @: value="@Model.ExpandCPURAM.CPU"
                                                                                                                                                                                                                                                                                   } />
                    <div class="description">
                        <p class="descriptiontext">
                            Enter the CPU cores you want to assign.
                        </p>
                    </div>
                </td>
                <td class="mandatory">*</td>
            </tr>
            <tr>
                <td class="lefttd tooltip"><span>Expand RAM to<i class="material-icons infoicon">info</i></span></td>
                <td>
                    <input name="ram" placeholder="4" @if (Model.ActionFailed) {  @: value="@Model.ExpandCPURAM.RAM"
                                                                                                                                                                                                                                                                                                              } />
                    <div class="description">
                        <p class="descriptiontext">
                            Enter the RAM in whole GB's you want to assign ex 8.
                        </p>
                    </div>
                </td>
                <td class="mandatory">*</td>
            </tr>

            <tr>
                <td class="lefttd tooltip"><span>Email to Notify<i class="material-icons infoicon">info</i></span></td>
                <td>
                    <input name="email" placeholder="xxx@columbusglobal.com" @if (Model.ActionFailed) {  @: value="@Model.ExpandCPURAM.Email"
                                                                                                                                                                                                                                                        } />
                    <div class="description">
                        <p class="descriptiontext">
                            Enter the email which will be notified when task is complete.
                        </p>
                    </div>
                </td>
                <td class="mandatory">*</td>
            </tr>
        </table>
        <br />
    <input type="submit" class="button" class:hover="button:hover" id="buttonSubmit" value="Expand" onclick="buttonSubmit.disabled = true; ClearMessages(); ClearErrors(); StartSubmitButtonMessage(); this.form.submit()" />
</fieldset>

}
