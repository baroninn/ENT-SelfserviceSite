@model SystemHostingPortal.Models.OrganizationModel
@{
    ViewBag.Title = "Organization > Remove Customer";
}
@section script {

}

<h1 class="title">@ViewBag.Title</h1>
<p class="warning">  
    Use this form to remove a customer completely. THERE IS NO TURNING BACK!!!!!
    </p>

@using (Html.BeginForm("RemoveCustomer", "Organization"))
{
    <fieldset>
        <legend>Remove Customer</legend>
        <table>
            <tr>
                <td colspan="2">
                    <div id="messageDiv">
                        @if (Model.Message != null)
                        {
                            <div class="message">@Model.Message <p><small><a href="javascript:ClearErrors()">Clear errors</a></small></p></div>
                        }
                    </div>
                    <div id="okMessageDiv">
                        @if (Model.OKMessage.Count > 0)
                        {
                            <div class="okmessage">
                                @foreach (string msg in Model.OKMessage)
                                {
                                    <p>@msg</p>
                                }
                                <p><small><a href="javascript:ClearMessages()">Clear messages</a></small></p>
                            </div>
                        }
                    </div>
                </td>
            </tr>

            <tr>
                <td class="lefttd">Organization</td>
                <td>
                    <select name="organization">
                        @foreach (string organization in Model.Organizations)
                        {
                            <option @if (Model.ActionFailed) { if (organization == Model.RemoveCustomer.Organization) { @: selected="selected"
                                                                        } }>
                                @organization
                                                                    </option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td class="lefttd tooltip"><span>Info<i class="material-icons infoicon">info</i></span></td>
                <td>
                    <div class="description">
                        <p class="descriptiontext">
                            When run, this will remove the customer completely. THERE IS NO TURNING BACK!!
                        </p>
                    </div>
                </td>
            </tr>
            <tr>
                <td class="lefttd tooltip"><span>File Server<i class="material-icons infoicon">info</i></span></td>
                <td>
                    <select name="fileserver">
                        @foreach (string fileserver in Model.FileServers)
                        {
                            <option selected="@(Model.ActionFailed && Model.Organization.FileServer == fileserver)">@fileserver</option>
                        }
                    </select>
                    <div class="description">
                        <p class="descriptiontext">
                            Specifies which file server that all user data will be stored on for the new organization. User Profile Disks are not affected by this.
                        </p>
                    </div>
                </td>
            </tr>
            <tr>
                <td class="lefttd tooltip"><span>File Server Drive Letter<i class="material-icons infoicon">info</i></span></td>
                <td>
                    <input name="driveletter" placeholder="E" @if (Model.ActionFailed) {  @: value="@Model.Organization.FileServerDriveLetter"
                                                                                                                                                              } />
                    <div class="description">
                        <p class="descriptiontext">
                            Specifies on which drive on the file server that all user data will be stored on.
                        </p>
                    </div>
                </td>
            </tr>
            <tr>
                <td class="lefttd tooltip"><span>Solution<i class="material-icons infoicon">info</i></span></td>
                <td>
                    <select name="solution">
                        <option selected="@(Model.ActionFailed && Model.RemoveCustomer.Solution.ToUpper() == "ADVOPLUS")">AdvoPlus</option>
                        <option selected="@(Model.ActionFailed && Model.RemoveCustomer.Solution.ToUpper() == "LEGAL")">Legal</option>
                        <option selected="@(Model.ActionFailed && Model.RemoveCustomer.Solution.ToUpper() == "MEMBER2015")">Member2015</option>
                    </select>
                    <div class="description">
                        <p class="descriptiontext">
                            Specifies which Capto product the organization is configured to use.
                        </p>
                    </div>
                </td>
            </tr>

        </table>
        <p class="title">
            Stuff to do manually:</p>
        <p>Remove data folder</p>
        <p>Remove DNS record for Organization</p>
        <p>Remove AdvoPlus middletier
        <p>Remove SQL DB</p>
        <p>Remove mobile site</p>
        <p> </p>
        <p>_</p>
        <input type="submit" id="buttonSubmit" value="Remove Customer" onclick="buttonSubmit.disabled = true; ClearMessages(); ClearErrors(); StartSubmitButtonMessage(); this.form.submit(); " />
    </fieldset>

}