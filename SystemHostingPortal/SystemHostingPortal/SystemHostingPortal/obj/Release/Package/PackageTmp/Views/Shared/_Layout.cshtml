<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=EDGE" />
        <title>@ViewBag.Title - SystemHosting Portal</title>
        
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

        @Styles.Render("~/Content/reset.css")
        @Styles.Render("~/Content/style.css")
        <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
        <script src="http://code.jquery.com/ui/1.10.1/jquery-ui.js"></script>
        @Scripts.Render("~/Scripts/jquery.collapse.js")
        @Scripts.Render("~/Scripts/shtfunctions.js")
        <script>
            $.ajaxSetup({
                cache: false
            });

            $(document).ready(function () {
                $(".tooltip").click(function () {
                    $(this).siblings("td").children(".description").toggle(100);
                })
            });
        </script>

        @RenderSection("style", required: false)
    </head>
    <body>
        <div id="topdiv">
            @if (SystemHostingPortal.Logic.Common.DebugMode)
            {
                <script>
                    $("#topdiv").css("background-color", "green");
                </script>
                
                <div>TEST TEST JST JST TEST TEST</div>
            }
            else
            {
                <div id="topdivtext"><img src="~//Images/logo_2.png" /><img src="~/Images/captologo.png" /></div>
            }
        </div>
        <div id="bodydiv">
            <div id="leftdiv">
                <ul class="navi">
                    <li><a href="~//">Home</a></li>
                    <li><a href="~//Home/Log">SelfService Log</a></li>
                    <li>Organization</li>
                    <li>
                        <ul class="navisub">
                            <li><a href="~//Organization/Create">Create organization</a></li>
                            <li><a href="~//Organization/SetNavCompanyName">Set NAV CompanyName</a></li> 
                            <li><a href="~//Organization/RemoveDummyDomain">Remove Dummy Domain</a></li>
                            @if (SystemHostingPortal.Logic.Common.DebugMode)
                            {<li><a href="~//Organization/RemoveCustomer">Remove Customer - TEST</a></li>}
                            <li><a href="~//Organization/DisableCustomer">Disable Customer</a></li>
                            <li><a href="~//Organization/EnableCustomer">Enable Customer</a></li>
                        </ul>
                    </li>
                    <li>User</li>
                    <li>
                        <ul class="navisub">
                            <li><a href="~//User/Create">Create user</a></li>
                                <li><a href="~//User/CreateBatch">Create users (batch)</a></li>
                                <li><a href="~//User/Disable">Disable user</a></li>
                                <li><a href="~//User/Enable">Enable user</a></li>
                                <li><a href="~//User/Remove">Remove user</a></li>
                        </ul>
                    </li>
                        <li>Mail</li>
                        <li>
                            <ul class="navisub">
                                
                                <li><a href="~//Mail/AddAlias">Add Alias</a></li>
                                <li><a href="~//Mail/RemoveAlias">Remove Alias</a></li>
                                <li><a href="~//Mail/CreateMailbox">Create Mailbox</a></li>
                                <li><a href="~//Mail/AddMailboxPermission">Add Mailbox Permission</a></li>
                                <li><a href="~//Mail/CreateDistributionGroup">Create DistributionGroup</a></li>
                                <li><a href="~//Mail/GetDeviceReport">Get Device Report</a></li>
                                <li><a href="~//Mail/SetMailForward">Set Mailforward</a></li>
                                <li><a href="~//Mail/SetMailboxPlan">Set MailboxPlan</a></li>
                                <li><a href="~//Mail/SetAllMailboxPlans">Set All MailboxPlans</a></li>
                                <li><a href="~//Mail/SetMailboxAutoResize">Set Mailbox Auto Resize</a></li> 
                            </ul>
                        </li>
                        <li>Service</li>
                        <li>
                            <ul class="navisub">
                                <li><a href="~//Service/CustomerReport">Customer Report</a></li>
                            </ul>
                        </li>
                </ul>
            </div>
            <div id="maindiv">
                @RenderBody()
            </div>

        </div>
        @RenderSection("script", required: false)

        <script>
            $(document).ready(function () {
                $(".collapsed").collapse();
            });

            function ClearErrors() {
                $('#messageDiv').html("");
            }

            function AddError(json) {
                $('#messageDiv').append('<div class="message"><p>' + json.Message + '</p>' +
                    (json.InnerMesssage != null ? '<p>' + json.InnerMesssage + '</p>' : '') +
                    '<pre>' + json.Stack + '</pre><small><a href="javascript:ClearErrors()">Clear errors</a></small></div>');
            }

            function ClearMessages() {
                $('#okMessageDiv').html("");
            }
        </script>
    </body>
</html>
