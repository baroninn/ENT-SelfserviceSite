@model SystemHostingPortal.Models.OrganizationModel
@{
    ViewBag.Title = "Organization > Enable Customer";
}
@section script {

}

<h1 class="title">@ViewBag.Title</h1>
<p>This will enable the customer completely..</p>

@using (Html.BeginForm("EnableCustomer", "Organization"))
{
    <fieldset>
        <legend>Enable Customer</legend>
        <table>
            <tr>
                <td colspan="2">
                    <div id="messageDiv">
                        @if (Model.Message != null)
                        {
                            <div class="message">@Model.Message <p><small><a href="javascript:ClearErrors()">Clear errors</a></small></p></div>
                        }
                    </div>
                    <div id="okMessageDiv">
                        @if (Model.OKMessage.Count > 0)
                        {
                            <div class="okmessage">
                                @foreach (string msg in Model.OKMessage)
                                {
                                    <p>@msg</p>
                                }
                                <p><small><a href="javascript:ClearMessages()">Clear messages</a></small></p>
                            </div>
                        }
                    </div>
                </td>
            </tr>

            <tr>
                <td class="lefttd">Organization</td>
                <td>
                    <select name="organization">
                        @foreach (string organization in Model.Organizations)
                        {
                            <option @if (Model.ActionFailed) { if (organization == Model.EnableCustomer.Organization) { @: selected="selected"
                                                                        } }>
                                @organization
                                                                    </option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td class="lefttd tooltip"><span>Info<i class="material-icons infoicon">info</i></span></td>
                <td>
                    <div class="description">
                        <p class="descriptiontext">
                            When run, this will enable the organization.
                        </p>
                    </div>
                </td>
            </tr>

        </table>
        <input type="submit" id="buttonSubmit" value="Enable Customer" onclick="buttonSubmit.disabled = true; ClearMessages(); ClearErrors(); StartSubmitButtonMessage(); this.form.submit(); " />
    </fieldset>

}