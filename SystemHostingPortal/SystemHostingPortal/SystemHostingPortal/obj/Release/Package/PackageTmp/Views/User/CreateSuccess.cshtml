@model SystemHostingPortal.Models.UserModel
@{
    ViewBag.Title = "User > Create > Success";
}

<h1 class="title">@ViewBag.Title</h1>
<p>A new user has been created</p>

<fieldset>
    <legend>Result</legend>
    <table>
        <tr>
            <td colspan="2">@if(Model.Message != null) { <div class="message">@Model.Message</div> }</td>
        </tr>
        <tr>
            <td class="lefttd">Organization:</td>
            <td class="righttd">@Model.UserList[0].Organization</td>
        </tr>
        <tr>
            <td class="lefttd">First Name:</td>
            <td class="righttd">@Model.UserList[0].FirstName</td>
        </tr>
        <tr>
            <td class="lefttd">Last Name:</td>
            <td class="righttd">@Model.UserList[0].LastName</td>
        </tr>
        <tr>
            <td class="lefttd">Primary email:</td>
            <td class="righttd">@Model.UserList[0].UserPrincipalName</td>
        </tr>
        <tr>
            <td class="lefttd">Password:</td>
            <td class="righttd">@Model.UserList[0].Password</td>
        </tr>
        <tr>
            <td class="lefttd">Email aliases:</td>
            <td>
                <textarea rows="10" disabled="disabled">@string.Join("\r\n", Model.UserList[0].EmailAddresses)</textarea>
            </td>
        </tr>
        <tr>
            <td class="lefttd">Stud Jur</td>
            <td class="righttd">@Model.UserList[0].StudJur</td>
        </tr>
        <tr>
            <td class="lefttd">Password Never Expires</td>
            <td class="righttd">@Model.UserList[0].PasswordNeverExpires</td>
        </tr>
        <tr>
            <td class="lefttd">Test user:</td>
            <td class="righttd">@Model.UserList[0].TestUser.ToString()</td>
        </tr>
    </table>
</fieldset>